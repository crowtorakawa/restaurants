<form action='/restaurants' method="POST">
    <h1 class="mb-1 restaurant-show-title">新增</h1>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-10 mx-auto">
                
                <p class="mb-1">
                    <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                        店名：
                    </span>
                    <input type="text" placeholder="name" name="name" >
                </p>
                <p class="mb-1">
                    <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                        Store name:
                    </span>
                    <input type="text" placeholder="name_en" name="name_en" >
                </p>
                <p class="mb-1">
                    <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                        類別：
                    </span>
                    <input type="text" placeholder="category" name="category" >
                </p>
    
                <p class="mb-1">
                    <span class="text-secondary">
                        <i class="fas fa-map-marker-alt pr-2"></i>
                            地址：
                    </span>
                    <input type="text" placeholder="location" name="location" >
                    <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
                        <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                    </a>
                </p>
                <p class="mb-1">
                    <span class="text-secondary">
                        <i class="fas fa-map-marker-alt pr-2"></i>
                            google地址：
                    </span>
                    
                    <input style="width:300px" type="text" placeholder="google_map" name="google_map" >
                        <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                    </a>
                </p>

                <p class="mb-1">
                    <span class="text-secondary">
                        <i class="fas fa-mobile-alt pr-2"></i>
                            電話：
                    </span>
                    <input type="text" placeholder="phone" name="phone" >
                </p>
                <p class="mb-1">
                    <span class="text-secondary">
                        <i class="fas fa-mobile-alt pr-2"></i>
                            評分：
                    </span>
                    <input type="number" placeholder="rating" name="rating" >
                </p>
                
                <p class="mb-5">
                    <span class="text-secondary">
                        <i class="fas fa-mobile-alt pr-2"></i>
                            介紹文字：
                    </span>
                </p>
                <p class="mb-5">
                    <textarea name="description" placeholder="description" rows="6"  cols="50" >
                        
                    </textarea>
                </p>
               
                    <span class="text-secondary">
                        <i class="fas fa-mobile-alt pr-2"></i>
                            圖片來源：
                    </span>
                    <input type="text" placeholder="image" name="image" >
                </p>
                <button type="submit">save</button>
                <a href="/">back</a>
            </div>
        </div>
    </div>
    
    
</form>